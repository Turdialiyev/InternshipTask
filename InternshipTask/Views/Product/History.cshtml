@{
    ViewData["Title"] = "Search History";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
        <h1 style="text-align:center;">Search History</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Product" asp-action="GetProductBydateFormat" method="Post" >
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input name="from" class="form-control" type="date"/>
                    </div>
                    <div class="form-group">
                        <input name="to" class="form-control" type="date" />
                    </div>
                    <br>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Send" class="btn btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>